{
  "compilerOptions": {
    "strict": true,                         
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true, 

    "module": "commonjs",                   
    "esModuleInterop": true,                
    "resolveJsonModule": true,              

    "target": "es2020",                     

    "outDir": "./dist",                     
    "rootDir": "./src"                      
  },
  "include": ["src/**/*"],                  
  "exclude": ["node_modules", "dist"]       
}